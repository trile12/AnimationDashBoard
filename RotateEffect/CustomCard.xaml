<Border
    x:Class="RotateEffect.CustomCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RotateEffect"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="bd"
    Background="Gray"
    CornerRadius="18"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Path
            Width="25"
            Height="25"
            Margin="20,30,0,0"
            HorizontalAlignment="Left"
            Data="{Binding ElementName=bd, Path=ImageData}"
            Fill="White"
            Stretch="Uniform" />
        <StackPanel Grid.Row="1" Margin="20,20,0,0">
            <TextBlock
                FontSize="16"
                Foreground="White"
                Opacity=".7"
                Text="{Binding ElementName=bd, Path=Title}" />
            <TextBlock
                FontSize="28"
                FontWeight="Medium"
                Foreground="White"
                Text="{Binding ElementName=bd, Path=Description}" />
        </StackPanel>
    </Grid>
</Border>
